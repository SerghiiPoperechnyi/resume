<main>
    {{#with page_header}}
        <h1 class="text-center">{{title}}</h1>
        <p class="text-uppercase text-center">{{description}}</p>
    {{/with}}  
    {{#with section}} 
        <div class="card">
            <div class="card-body">
                {{#with about_us}}
                    <p class="display-6 text-end">{{title_list.main}}</p>
                    <h2 class="text-end mb-5">{{title_list.sub}}</h2>
                    <button class="btn btn-outline-info">{{button.text}}</button>
                {{/with}}
            </div>
        </div>
        <div class="card my-5">
            <div class="card-body">
                {{#with advantage}}
                    <p class="display-5 text-capitalize">{{title}}</p>
                    <div class="card">
                        <div class="card-body">
                            {{#with efficiency}}
                                <p class="display-4">{{title}}</p>
                                <h6 class="text-capitalize">{{sub_title}}</h6>
                                <p>{{description}}</p>
                                <button class="btn btn-outline-warning">{{button}}</button>
                            {{/with}}
                        </div>
                    </div>
                    <div class="card my-3">
                        <div class="card-body">
                            {{#with innovation}}
                                <p class="display-4 text-center">{{title}}</p>
                                <h6 class="text-capitalize text-center">{{sub_title}}</h6>
                                <p class="text-center">{{description}}</p>
                                <button class="btn btn-outline-warning ">{{button}}</button>
                            {{/with}}
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-body">    
                            {{#with collaboration}}
                                <p class="display-4 text-end">{{title}}</p>
                                <h6 class="text-capitalize text-end">{{sub_title}}</h6>
                                <p class="text-end">{{description}}</p>
                                <button class="btn btn-outline-warning">{{button}}</button>
                            {{/with}}
                        </div>
                    </div>    
                {{/with}}
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                {{#with agreement}}
                        <p class="display-5">{{title}}</p>
                        <div class="card">
                            <div class="card-body">        
                                {{#with info}}
                                    <h5>{{sub_title}}</h5>
                                    <div class="card">
                                        <div class="card-body">
                                            <p>{{detail.text}}</p>
                                            <button class="btn btn-success">{{detail.button}}</button>
                                        </div>
                                    </div>
                                {{/with}}
                            </div>
                        </div>
                {{/with}}
            </div>
        </div>    
    {{/with}} 
</main>