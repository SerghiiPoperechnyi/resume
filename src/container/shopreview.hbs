<main>
  <div class="col-12 mt-5">
    <div class="row">
      {{#with formBlock}}
        <div class="col-8">
          <h1 class="mb-3">{{header}}</h1>
          {{#with rating}}
            <div class="my-3">{{title}}: {{value}}</div>
          {{/with}}
          {{#with actionBlock}}
            <div class="nav nav-tabs">
              {{#each tabs}}
                <div class="nav-item">
                  {{#if @last}}
                    <a href="#" class="nav-link active">{{text}}</a>
                    {{else}}
                    <a href="#" class="nav-link">{{text}}</a>
                  {{/if}}
                </div>
              {{/each}}
            </div>
            <hr class="my-5">
            {{#with report}}
              <div class="card p-3">
                <div class="card-body">
                  <div class="mb-3">{{title}}</div>
                  <button class="btn btn-secondary" href="{{button.link}}">{{button.text}}</button>
                </div>
              </div> 
            {{/with}}
          {{/with}}
          <hr class="my-5">
          <div>
            {{#with feedbackBlock}}
              <h2 class="mb-3">{{title}}</h2>
              <div class="mt-5">
                {{#each buttons}}
                {{#if isWarning}}
                  <a class="btn btn-warning me-3" href="{{link}}">{{text}}</a>
                {{/if}}
                {{#if isSuccess}}
                  <a class="btn btn-success mx-3" href="{{link}}">{{text}}</a>
                {{/if}}
                {{#if isDanger}}
                  <a class="btn btn-danger mx-3" href="{{link}}">{{text}}</a>
                {{/if}}
                {{/each}}
              </div>
            {{/with}}
          </div>
          <hr class="my-5">
        </div>
        <div class="col-4">
          {{#with goodsInfo}}
            <div class="card">
              <div class="card-body">
                <img src="{{photo}}" alt="#">
                <h5 class="mt-3">{{name}}</h5>
              </div>
            </div>
            <div class="card my-4">
              <div class="card-body">
                <h4 class="my-3">{{price}}</h4>
                {{#if inMarket}} <div>В Наявності</div> {{/if}}
                <div>
                  {{#each buttons}}
                  {{#if isPrimary}}
                    <div><a class="btn btn-primary my-3" href="{{link}}">{{text}}</a></div>
                  {{/if}}
                  {{#if isSecondary}}
                    <div><a class="btn btn-secondary" href="{{link}}">{{text}}</a></div>
                  {{/if}}
                  {{/each}}
                </div>
              </div>
            </div>
            <div class="card">
              <div class="card-body">
                <div>{{seller.title}}: <strong>{{seller.value}}</strong></div>
              </div>
            </div>
          {{/with}}
        </div>
      {{/with}}
    </div>
    {{#each reviewList}}
      <div class="card p-3 my-5">
        <div class="card">
          <div class="card-header p-2">
            {{#with title}}
              <h5>{{userName}}</h5>
              <p>{{caption}}</p>
              <p>{{date}}</p>
            {{/with}}
          </div>
          {{#with reviewBody}}
            <div class="card-body p-2">
              <p>{{seller.title}}: {{seller.value}}</p>
              <p>{{rating.title}}: {{rating.value}}</p>
              <p>{{text}}</p>
              <h6>{{advantages.title}}:</h6>
              <p>{{advantages.text}}</p>
              <h6>{{disadvantages.title}}:</h6>
              <p>{{disadvantages.text}}</p>
              {{#each images}}
                <img src="{{this}}" alt="#">
              {{/each}}
            </div>
          {{/with}}
        </div>
        {{#with reviewBody}}
        {{#each coments}}
          <div class="card ms-5 my-3">
            <div class="card-body">
              <h5>{{userName}}</h5>
              <p>{{date}}</p>
              <p>{{text}}</p>
            </div>
          </div>
        {{/each}}
        {{/with}}
      </div>
    {{/each}}
    {{>shopaction}}
  </div>
</main>