{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<main>
  {{#with main}}
  {{!-- <main> --}}
    <section>
      {{> title data="Work history" big= true}}
      <div>
        <ul>
          {{#each works}}
          <li>
            <div>{{position}}</div>
            <div class="my-2">
              {{duration.from}}
              -
              {{#if duration.to}}
              {{duration.to}}
              {{else}} (ще працюю) {{/if}}
            </div>
            <div>
              {{#if company.url}}
              {{> link text=company.name href=company.url blank=true noLine=true}}
              {{else}}
              <b>{{company.name}}</b>
              {{/if}}
            </div>
            <div class="mt-5">
              <strong> Projects ({{projectAmount}})</strong>
            </div>
            <ul>
              {{#each projects}}
              <li>
                <div>{{> link text=name href=url blank=true noLine=true}}</div>
                <p>About {{about}} </p>
                <div class="mb-3"> <em>Project stacks ({{stackAmoGnt}})</em>
                  <ul>
                    {{#each stacks}}
                    <li>{{name}}</li>
                    {{/each}}
                  </ul>
                </div>
                <div> <em> Project awards ({{awardAmoGnt}})</em>
                  <ul>
                    {{#each awards}}
                    <li>{{name}}</li>
                    {{/each}}
                  </ul>
                </div>
              </li>
              {{/each}}
            </ul>
          </li>
          {{/each}}
        </ul>
      </div>
    </section>
  {{!-- </main> --}}
  {{/with}}
</main>

{{!--
Цей код містить лише те, що буде виводитись в {{{body}}} в layout/default.hbs
Адже наш layout/default.hbs має вже структуру HTML
--}}