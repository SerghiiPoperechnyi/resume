<main>
  {{> breadcrumb}}
  <h1>{{header}}</h1>
  <div class="col-12">
    <div class="row">
      <div class="col-9">
        <div class="row">
          {{#each sortBlock}}
            <div class="col-4 my-4">
            <select class="form-select">
              <option selected>{{placeholder}}</option>
              {{#each options}}
              <option value="{{value}}">{{text}}</option>
              {{/each}}
            </select>
            </div>
          {{/each}}
        </div>
      </div>
      <div class="col-4">
        <div class="card">
          {{#with filterBlock}}
            <div class="card-body">
              {{#with sellers}}
                <p>{{title}}</p>
                {{#each list}}
                  <div class="form-check">
                    <label class="form-check-label">{{value}}</label>
                    <input name="salesman" type="checkbox" class="form-check-input">
                  </div>
                {{/each}}
              {{/with}}
              <hr>
              {{#with brands}}
                <p>{{title}}</p>
                <div>
                  <input class="form-control" placeholder="{{input.placeholder}}">
                </div>
                <div class="my-3">
                  {{#each options}}
                    <div class="form-check ">
                      <label class="form-check-label">{{value}}</label>
                      <input name="firm" type="checkbox" class="form-check-input">
                    </div>
                  {{/each}}
                </div>
              {{/with}}
              <hr>
              <div>
                {{#with price}}
                  <p>{{title}}</p>
                  <div>
                    <input class="form-control" placeholder="{{range.from}}">
                  </div>
                  <div class="my-3">
                    <input class="form-control" placeholder="{{range.to}}">
                  </div>
                  <button class="btn btn-outline-secondary" href="{{button.link}}">{{button.text}}</button>
                {{/with}}
              </div>
              <hr>
              <div>
                {{#each filterList}}
                  <p>{{title}}</p>
                  {{#each options}}
                    <div class="form-check ">
                      <label class="form-check-label">{{value}}</label>
                      <input name="firm" type="checkbox" class="form-check-input">
                    </div>
                  {{/each}}
                  {{#unless @last}}
                  <hr class="my-3">
                  {{/unless}}  
                {{/each}}
              </div>
            </div>
          {{/with}}
        </div>
      </div>
      <div class="col-8">
        <div class="row g-3">
          {{#each goodsList}}
            <div class="col-6">
              {{> badges}}
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
  <div class="mt-5">
  {{> shopaction}}  
  </div>
</main>