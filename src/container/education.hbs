<div>

    {{#with main}}
    <main>
        {{> title data=title big=true}}
        <section>
            <ul class="ps-5">
                {{#each educations}}
                <li>{{name}}
                    {{#unless isEnd}} (щє в процесі) {{/unless}}
                </li>
                {{/each}}
            </ul>
        </section>
        {{> title data='My certificates' big=false}}
